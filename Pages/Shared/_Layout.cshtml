@{
    var title = ViewData["Title"] ?? "Empire";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Empire</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Empire</a>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-light btn-sm" asp-page="/Create">Create</a>
                <a class="btn btn-outline-light btn-sm" asp-page="/Join">Join</a>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js" integrity="sha512-wN7Y5T2r8j04YfGLmRoTSesFiNU8cyrP64VZ3zvxiFPK7lVAmSuw0UpYGH8YcGjQN8PTTUZcozfdcTrV72SsSg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/empire.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
