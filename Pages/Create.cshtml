@page
@model EmpireWebApp.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card p-4">
            <h1 class="h3 mb-3">Create a new Empire game</h1>
            <form method="post">
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Create game</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger mt-3">@Model.Error</div>
            }
        </div>
    </div>
</div>
