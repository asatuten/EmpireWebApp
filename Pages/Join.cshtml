@page
@model EmpireWebApp.Pages.JoinModel
@{
    ViewData["Title"] = "Join";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card p-4">
            <h1 class="h3 mb-3">Join a game</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Game code</label>
                    <input asp-for="Input.Code" class="form-control text-uppercase" maxlength="6" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Display name</label>
                    <input asp-for="Input.Name" class="form-control" required />
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.NewDevice" />
                    <label class="form-check-label" asp-for="Input.NewDevice">
                        Join as a new player on this device
                    </label>
                    <div class="form-text">Check this to keep multiple test players open on one browser.</div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Join</button>
            </form>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger mt-3">@Model.Error</div>
            }
        </div>
    </div>
</div>
