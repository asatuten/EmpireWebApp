@page "/game/{code}/tv"
@model EmpireWebApp.Pages.Game.TvModel
@{
    ViewData["Title"] = $"TV {Model.Code}";
}

<div class="row g-3">
    <div class="col-12">
        <div class="card p-4">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <div>
                    <div class="text-muted">Game code</div>
                    <div class="fs-1 fw-bold text-uppercase">@Model.Code</div>
                </div>
                <div class="text-end">
                    <div class="small text-muted">Active guesser</div>
                    <div class="fs-3 fw-semibold" id="tvGuesser">--</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card p-4 prompt-display text-center" id="promptDisplay">Waiting for prompts...</div>
        <div class="d-flex justify-content-between align-items-center mt-2">
            <div id="promptMeta" class="text-muted"></div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" id="toggleVoice">Enable voice</button>
                <button class="btn btn-secondary" id="nextPrompt">Next prompt</button>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card p-3 sticky-controls">
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <button class="btn btn-success" id="startGame">Start game</button>
                <button class="btn btn-outline-danger" id="resetGame">Reset game</button>
                <div class="form-check form-switch ms-auto">
                    <input class="form-check-input" type="checkbox" id="autoAdvanceToggle" checked>
                    <label class="form-check-label" for="autoAdvanceToggle">Auto-advance prompt on correct</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card p-3">
            <h5 class="mb-3">Empires</h5>
            <div id="empireGrid" class="d-flex flex-wrap gap-3"></div>
        </div>
    </div>

    <div class="col-12">
        <div class="card p-3">
            <h5 class="mb-3">Pending guess</h5>
            <div id="pendingPanel" class="text-muted">None</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            window.empire.initPage({
                code: '@Model.Code',
                isTv: true
            });
        });
    </script>
}
